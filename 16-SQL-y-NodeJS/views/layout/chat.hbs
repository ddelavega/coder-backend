<div class="uk-card uk-card-default uk-padding-small">
  <h3>Chat</h3>
  <div id="listaMensajes" class="uk-card uk-card-default uk-padding-small">
  </div>
  <form onsubmit="return enviarMensaje()" action="/">
    <div class="uk-grid-collapse uk-child-width-expand@s uk-text-center uk-margin-top" uk-grid>
      <div class="uk-width-2-5@s">
        <div>
          <input class="uk-input" type="email" placeholder="Email" id="email" required>
        </div>
      </div>
      <div class="uk-width-2-5@s">
        <div>
          <input class="uk-input" type="text" placeholder="mensaje" id="mensaje" required>
        </div>
      </div>
      <div class="uk-width-1-5@s">
        <div>
          <button class="uk-button-altern" type="submit">Enviar</button>
        </div>
      </div>
    </div>
  </form>
      <button class="uk-margin uk-button-altern uk-secondary" id="eliminarMensaje">Borrar todos los Mjs</button>
</div>
